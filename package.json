{
  "name": "my-project",
  "description": "A Vue.js project",
  "author": "Thierry Geindre <thierry@zol.fr>",
  "private": true,
  "scripts": {
    "watch": "watchify -vd -p browserify-hmr -e src/FrontBundle/Resources/scripts/main.js -o web/build.js",
    "serve": "php bin/console server:run 127.0.0.1:8000",
    "dev": "npm-run-all --parallel watch serve",
    "build": "cross-env NODE_ENV=production browserify -g envify src/FrontBundle/Resources/scripts/main.js | uglifyjs -c warnings=false -m > web/build.js"
  },
  "dependencies": {
    "bootstrap": "^3.3.7",
    "cookies-js": "^1.2.3",
    "jquery": "^3.1.1",
    "vue": "^2.0.1",
    "vue-resource": "^1.2.0",
    "vue-router": "^2.2.1",
    "vuex": "^2.1.2"
  },
  "devDependencies": {
    "babel-core": "^6.0.0",
    "babel-preset-es2015": "^6.0.0",
    "babelify": "^7.2.0",
    "browserify": "^13.0.1",
    "browserify-hmr": "^0.3.1",
    "browserify-shim": "^3.8.13",
    "cross-env": "^1.0.6",
    "envify": "^3.4.1",
    "http-server": "^0.9.0",
    "npm-run-all": "^2.1.2",
    "uglify-js": "^2.5.0",
    "vueify": "^9.1.0",
    "watchify": "^3.4.0"
  },
  "browser": {
    "bootstrap": "./node_modules/bootstrap/dist/js/bootstrap.js"
  },
  "browserify": {
    "transform": [
      "vueify",
      "babelify",
      "browserify-shim"
    ]
  },
  "browserify-shim": {
    "bootstrap": {
      "depends": [
        "jquery:jQuery"
      ]
    }
  }
}
