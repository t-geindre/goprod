<html>
    <head>
        <title>Goprod, deployment manager</title>
    </head>
    <body>
        <div id="app">
        </div>

        <script type="text/template" id="app-template">
            <div>
                <div v-if="authenticating">
                    Identification en cours...
                </div>
                <div class="auth" v-if="!authenticated">
                    Identification Github requise
                    <div class="auth-process" @click="authenticate(true)">
                        Auth process
                    </div>
                </div>
                <div v-else>
                    Identifi√©
                </div>
            </div>
        </script>

        <script type="text/javascript">
            window.GithubClient = {
                app: {
                    clientId: "{{ github.client_id }}",
                    scope: "repo"
                },
                url: {
                    site: "{{ github.url }}",
                    api: "{{ github.url }}api/v3/",
                    authProxy: "{{ path('auth') }}"
                }
            };
        </script>
        <script type="text/javascript" src="/js/build.js"></script>
    </body>
</html>
