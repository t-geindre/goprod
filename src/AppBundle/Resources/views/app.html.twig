<script type="text/template" id="app-template">
    <div>
        <nav class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#">Goprod</a>
                </div>
                <div id="navbar" class="collapse navbar-collapse">
                    <ul class="nav navbar-nav">
                        <li class="active"><a href="#">New</a></li>
                        <li><a href="#about">In progress</a></li>
                    </ul>
                    <user-details
                        v-bind:authenticated="authenticated"
                        v-bind:user="user"
                        v-on:login="authenticate"
                        v-on:logout="clearAuth">
                    </user-details>
                </div>

            </div>

        </nav>
        <div class="container" id="container">
            <transition name="fade">
                <p v-if="authenticating">Processing...</p>
                <div v-if="authenticated">
                    <div class="page-header">
                        <h1>Let's go prod ! <small>New deployment</small></h1>
                    </div>
                    <div>
                        <ul class="nav nav-tabs" role="tablist">
                            <li class="active">
                                <a href="#deploy-pull-request" aria-controls="home" role="tab" data-toggle="tab">
                                    Pull Requests
                                </a>
                            </li>
                            <li>
                                <a href="#deploy-project" aria-controls="profile" role="tab" data-toggle="tab">
                                    Projects
                                </a>
                            </li>
                        </ul>
                        <div class="tab-content">
                            <div class="tab-pane active border-right border-bottom border-left" id="deploy-pull-request">
                                <github-issues
                                    query-append="is:pr"
                                    :query="'is:open author:'+user.login"
                                    v-bind:user-login="user.login"
                                >
                                </github-issues>
                            </div>
                            <div class="tab-pane border-right border-bottom border-left" id="deploy-project">

                            </div>
                        </div>
                    </div>
                </div>
            </transition>
        </div>
    </div>
</script>

<script type="text/javascript">
    window.GithubClient = {
        app: {
            clientId: "{{ github.client_id }}",
            scope: "repo"
        },
        url: {
            site: "{{ github.site }}",
            api: "{{ github.api }}",
            authProxy: "{{ path('auth') }}"
        }
    };
</script>

