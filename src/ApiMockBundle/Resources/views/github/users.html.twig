<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="utf-8">
        <title>Github oauth mock</title>
        <link rel="icon" href="data:;base64,iVBORw0KGgo=">
        <style type="text/css">
            div.main {
                width: 300px;
                margin: 50px auto;
            }
            a {
                color:#000;
                text-decoration:none;
            }
        </style>
    </head>
    <body>
        <div class="main">
            <h1>Github oauth mock</h1>
            <p>Select user:</p>
            <ul>
                {% for user in users %}
                    <li>
                        <a href="{{ path('index') }}?code={{ user.oauth_code }}">
                            <img src="{{ user.avatar_url }}" width="30" />
                            {{ user.name }}
                        </a>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </body>
</html>
